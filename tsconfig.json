{
  "compilerOptions": {
    "target": "ESNext",
    "types": ["node", "jest"],
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": false,
    "outDir": "lib",
    "baseUrl": "."
  },
  "include": ["src"],
  "exclude": ["node_modules", "src/__tests__"]
}
